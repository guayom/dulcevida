---
title: Contact Us
weight: 6
layout: content
---
<div class="row plain-style">
	<!-- Show form contact -->
	<div class="col-md-6 contact-left">
		<div class="contact-form">
			<form id="contact-form" action="https://formspree.io/info@ladulcevidacr.com" method="post" class="form-validate form-horizontal">
				<fieldset>
					<legend><%= t("contact.required_fields") %></legend>
					<div class="form-group">
						<div class="col-sm-12">
							<label for="name" class="hasPopover required control-label" title="" data-content="Your name." data-original-title="Name">
								<%= t("contact.name") %><span class="star">&nbsp;*</span></label>
								<input type="text" name="name" value="" class="required form-control" size="30" required="required" aria-required="true">
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-12">
								<label for="_replyto" class="hasPopover required control-label" title="" data-content="Email Address for contact." data-original-title="Email">
									<%= t("contact.email") %><span class="star">&nbsp;*</span>
								</label>
								<input type="email" name="_replyto" class="validate-email required form-control" value="" size="30" autocomplete="email" required="required" aria-required="true">
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-12">
								<label for="subject" class="hasPopover required control-label" title="" data-content="Enter the subject of your message here." data-original-title="Subject">
									<%= t("contact.subject") %><span class="star">&nbsp;*</span></label>
									<input type="text" name="subject" value="" class="required form-control" size="60" required="required" aria-required="true">
								</div>
							</div>
							<div class="form-group contact-mes">
								<div class="col-sm-12">
									<label id="jform_contact_message-lbl" for="message" class="hasPopover required control-label" title="" data-content="Enter your message here." data-original-title="Message">
										<%= t("contact.message") %><span class="star">&nbsp;*</span>
									</label>
									<textarea name="message" id="jform_contact_message" cols="50" rows="10" class="required form-control" required="required" aria-required="true"></textarea>
								</div>
							</div>
											<div class="form-group">
												<div class="col-sm-12">
													<input type="text" name="_gotcha" style="display:none" />
													<input type="hidden" name="_subject" value="New submission from the website" />
													<input type="hidden" name="_next" value="<%= t('contact.thanks') %>" />
														<button class="btn btn-rounded btn-primary smooth-scroll validate" type="submit"><%= t("contact.submit") %></button>
													</div>
													</div>
												</fieldset>
											</form>
										</div>
									</div>
									<!-- End Show form contact -->

									<!-- Show Other information -->
									<div class="col-md-6 contact-information">
										<div class="inner">

											<!-- Show Contact name -->
											<div class="page-header">
												<h2>
													<%= t("contact.information") %>							</h2>
												</div>
												<!-- End Show Contact name -->

													<!-- Contact images -->
													<!-- End Contact images -->


													<!-- Contact -->
													<h3><%= t("contact.title") %></h3>

													<dl class="contact-address dl-horizontal" itemprop="address" itemscope="" itemtype="http://schema.org/PostalAddress">



															<dd>
																<span class="contact-state" itemprop="addressRegion">
																	<i class="fa fa-location-arrow"></i>Guanacaste<br>				</span>
																</dd>
																<dd>
																	<span class="contact-country" itemprop="addressCountry">
																		<i class="fa fa-building-o"></i>Costa Rica<br>			</span>
																	</dd>


																		<dd>
																			<span class="contact-telephone" itemprop="telephone">
																				<i class="fa fa-phone"></i>+506-8821-6682</span>
																			</dd>
																		</dl>

																		<!-- End contact-->


																	</div>
																</div>

																<!-- End Show -->
															</div>
